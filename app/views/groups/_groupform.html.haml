= form_for @group, id: "edit_chat_group_22", class: "edit_chat_group" do |f|
  - if @group.errors.any?
    .chat-group-form__errors
      %h2= "#{@group.errors.full_messages.count}件のエラーが発生しました。"
      %ul
        - @group.errors.full_messages.each do |message|
          %li= message
  .chat-group-form__field.clearfix
    .chat-group-form__field--left
      = f.label :name, "グループ名", class: "chat-group-form__label", for: "chat_group_name"
    .chat-group-form__field--right
      .chat-group-form__search.clearfix
        = f.text_field :name, class: 'chat__group_name chat-group-form__input', placeholder: "グループ名を入力してください"

  .chat-group-form__field.clearfix
    = f.fields_for :users, @group.users.build do |u|
      .chat-group-form__field--left
        = u.label :name, "チャットメンバーを追加", class: "chat-group-form__label"
      .chat-group-form__field--right
        .chat-group-form__search.clearfix
          = u.text_field :name, class: "chat-group-form__input", id: "user-search-field", placeholder: "追加したいユーザー名を入力してください", type: "text"
      .chat-group-form__field--right
        #user-search-result

  -# #chat-group-user-22.chat-group-user.clearfix
  -#   %input{:name => "chat_group[user_ids][]", :type => "hidden", :value => "22"}/
  -#   %p.chat-group-user__name seo_kyohei

  .chat-group-form__field.clearfix
    = f.fields_for :users, @group.users.build do |u|
      .chat-group-form__field--left
        = u.label :name, "チャットメンバー", class: "chat-group-form__label"
      .chat-group-form__field--right
        #chat-group-users
          .chat-group-user.clearfix.js-chat-member{ id: "chat-group-user=-#{current_user.id}" }
            = u.hidden_field :id, html:{ type: "hidden", value: current_user.id }
            %p.chat-group-user__name= current_user.name

  .chat-group-form__field.clearfix
    .chat-group-form__field--left
    .chat-group-form__field--right
      = f.submit class: 'chat-group-form__action-btn'


