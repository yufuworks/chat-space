%body
  .anounce
    %p グループを作成しました
  %nav.nav
    .nav-top
      %p#username user1
      .nav-top__buttons
        = link_to "#", id: "account-edit-button" do
          %i.fa.fa-cog
        = link_to "#", id: "new-group-button" do
          %i.far.fa-edit
    .nav-bottom
      .nav-bottom__group
        %p.nav-bottom__group__name sumple group1
        %p.nav-bottom__group__status まだメッセージがありません
      .nav-bottom__group
        %p.nav-bottom__group__name sumple group2
        %p.nav-bottom__group__status 画像が投稿されています
  %header
    .container
      %p.container__header-title sumple group1
      %p.container__header-caption member:user3,user2,user1
    .header-button 
      %p Edit
  .main
    .main__container
      .main__container__top
        %p.main__container__top__username user2
        %p.main__container__top__date 2019/04/10(Wed) 11:40:18
      %p.main__container__message sumple chat
    .main__container
      .main__container__top
        %p.main__container__top__username user1
        %p.main__container__top__date 2019/04/10(Wed) 11:54:33
      %p.main__container__message sumple message
  %footer
    %form#message-form{ action: "#", method: "post", enctype: "multipart/from-data" }
      %input{ type: "text", name: "message", value: "type a message", id: "#message-field" }
      %label{ for: "#file-upload" }
        %i.far.fa-file-image
      %input#file-upload{ type: "file" }
      %input{ type: "submit", value: "Send", id: "#message-submit" }
